  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch CUDA Core",
      "type": "cuda-gdb",
      "request": "launch",
      "program": "${workspaceFolder}/core",
      "preLaunchTask": "CUDA: nvcc build active file"
    },
    {
      "name": "Server",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_APP": "wsgi.py", "FLASK_ENV": "development" },
      "args": ["run", "--no-debugger"],
      "jinja": true,
      "justMyCode": true
    }
  ]
}
